<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvGroupCocktail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:textSize="@dimen/normal_text_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ordinary Drink" />

    <ImageView
        android:id="@+id/ivImageCocktail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/margin_normal"
        android:src="@drawable/image"
        app:layout_constraintStart_toStartOf="@+id/tvGroupCocktail"
        app:layout_constraintTop_toBottomOf="@+id/tvGroupCocktail" />

    <TextView
        android:id="@+id/tvTitleCocktail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_title_text"
        app:layout_constraintBottom_toBottomOf="@id/ivImageCocktail"
        android:layout_marginStart="@dimen/margin_large"
        app:layout_constraintStart_toEndOf="@+id/ivImageCocktail"
        app:layout_constraintTop_toTopOf="@id/ivImageCocktail"
        tools:text="50/50" />

</androidx.constraintlayout.widget.ConstraintLayout>